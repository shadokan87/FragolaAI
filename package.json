{
  "name": "fragola-ai",
  "displayName": "fragolaAI",
  "description": "we'll see later",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.94.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "fragola-ai-view",
          "title": "Fragola AI",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "fragola-ai-view": [
        {
          "type": "webview",
          "id": "fragola-ai-sidebar",
          "name": "Fragola AI Chat",
          "initialSize": 400,
          "minSize": 250,
          "maxSize": 800
        }
      ]
    },
    "commands": [
      {
        "command": "fragola-ai.openChat",
        "title": "Open Fragola AI Chat"
      }
    ],
    "keybindings": [
      {
        "command": "fragola-ai.openChat",
        "key": "ctrl+l",
        "mac": "cmd+l"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "svelte-compile": "npm run build --prefix ./svelte",
    "compile": "npm run svelte-compile && npm run check-types && npm run lint && node esbuild.js",
    "compile_no_svelte": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@types/vscode": "^1.94.0",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.24.0",
    "eslint": "^9.13.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "@types/node-fetch": "^2.6.11",
    "axios": "^1.7.7",
    "dotenv": "^16.4.5",
    "dotenv-vault": "^1.26.2",
    "node-fetch": "^2.6.12",
    "openai": "^4.71.0"
  }
}
